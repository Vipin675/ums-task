<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <title>UMS | AMTECHNETWORKS</title>
  </head>
  <style>
    /* Professional Minimal CSS */
    :root {
      --primary: #2c3e50;
      --secondary: #34495e;
      --accent: #3498db;
      --light: #ecf0f1;
      --success: #27ae60;
      --error: #e74c3c;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      line-height: 1.6;
      background-color: #f9fafb;
      color: var(--primary);
      padding: 2rem;
      min-height: 100vh;
    }

    .container {
      max-width: 480px;
      margin: 0 auto;
    }

    .alert {
      padding: 1rem;
      margin-bottom: 1.5rem;
      border-radius: 6px;
      font-size: 0.9rem;
      border-left: 4px solid transparent;
    }

    .alert.success {
      background-color: #e8f6ef;
      border-color: var(--success);
      color: var(--success);
    }

    .alert.error {
      background-color: #fdedec;
      border-color: var(--error);
      color: var(--error);
    }

    form {
      background: white;
      padding: 2.5rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
      border: 1px solid #e5e7eb;
    }

    h2 {
      margin-bottom: 2rem;
      text-align: center;
      color: var(--secondary);
      font-weight: 600;
      font-size: 1.8rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    label {
      display: block;
      margin-bottom: 0.75rem;
      font-weight: 500;
      color: var(--secondary);
      font-size: 0.9rem;
    }

    input {
      width: 100%;
      padding: 0.875rem;
      border: 1px solid #e5e7eb;
      border-radius: 6px;
      font-size: 1rem;
      transition: all 0.2s ease;
    }

    input:focus {
      outline: none;
      border-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
    }

    button {
      width: 100%;
      padding: 1rem;
      background-color: var(--accent);
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    button:hover {
      background-color: #2980b9;
      transform: translateY(-1px);
    }

    .g-recaptcha {
      margin: 1.75rem 0;
      display: flex;
      justify-content: center;
    }

    a {
      color: var(--accent);
      text-decoration: none;
      font-weight: 500;
    }

    a:hover {
      text-decoration: underline;
      text-underline-offset: 2px;
    }

    .profile {
      background: white;
      padding: 2.5rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
      border: 1px solid #e5e7eb;
    }

    .profile-info p {
      margin: 1.25rem 0;
      padding: 1rem;
      background-color: var(--light);
      border-radius: 6px;
      font-size: 0.95rem;
    }

    form[action="/logout"] button {
      background-color: var(--error);
      margin-top: 1.5rem;
    }

    @media (max-width: 480px) {
      body {
        padding: 1.5rem;
      }

      form {
        padding: 1.5rem;
      }
    }
  </style>
  <body>
    <div class="container">
      <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert success"><%= success %></div>
      <% } %> <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert error"><%= error %></div>
      <% } %>
    </div>
  </body>
</html>
